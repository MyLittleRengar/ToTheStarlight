<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/astroLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/astroTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cafe24surround"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="천문제목" />

        <TextView
            android:id="@+id/astroEventTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/cafe24surround"
            android:text="천문현상"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/astroDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cafe24surroundair"
            android:text="천문날짜"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/astroTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/cafe24surroundair"
            android:text="천문시간"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/astroCountdownTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/cafe24surround"
            android:text="남은시간"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>